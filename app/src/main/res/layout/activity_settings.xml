<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.Settings_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/colorPrimary"
            android:textSize="38sp"
            android:id="@+id/settingsLabel"
            android:fontFamily="@font/primary_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Settings"
            android:id="@+id/dataLabel"
            android:fontFamily="@font/primary_medium"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_below="@id/settingsLabel"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/dataLabel"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <include layout="@layout/components_button_black_xxl"
                android:id="@+id/exportData"/>

        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>