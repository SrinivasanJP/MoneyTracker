<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/component_rounded_gradient_square">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30sp"
            android:paddingHorizontal="30sp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/primary_regular"
                android:text="30 September 2025"
                android:textColor="@color/colorOnPrimary"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/profile_placeholder" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balanceSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerLayout"
            android:paddingHorizontal="30sp">

            <RelativeLayout
                android:id="@+id/balanceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/primary_bold"
                        android:text="Rs."
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/balanceAmountWhole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/primary_bold"
                        android:text="100000"
                        android:textColor="@color/colorOnPrimary"

                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/balanceAmountFraction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/primary_bold"
                        android:text=".99"
                        android:textColor="@color/colorOnPrimary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/leftBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/primary_medium"
                    android:text="Left balance"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/balanceLayout"
                android:layout_marginVertical="30sp"
                android:layout_marginTop="6dp"
                android:background="@drawable/component_diagonal_gray_strips"
                android:clipToOutline="true">

                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="32dp"
                    android:background="@drawable/component_rounded_black_rectangle" />

            </RelativeLayout>

        </RelativeLayout>
